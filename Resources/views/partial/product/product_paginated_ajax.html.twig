{# total items count #}
<div class="col-xs-12">
    <div class="count">
        Wszystkich: {{ products.getTotalItemCount }}
    </div>
</div>
<div class="col-xs-12" id="container-sort-link">Sortuj: 
    {{ knp_pagination_sortable(products, 'Data dodania', 'p.id') }}
    {{ knp_pagination_sortable(products, 'Name', 'p.name') }}
</div>
<div class="col-xs-12">        
    <div id="medias-pagination-up" class="navigation">
        {{ knp_pagination_render(products) }}
    </div>
</div>
{% set price=20.32 %}
{% if is_granted('ROLE_ADMIN') %}
    {% set authentiticated=true %}
{% else %}
    {% set authentiticated=false %}
{% endif %}
<div class="col-xs-12"> 
    {% for product in products if products %}
        <div class="col-xs-12 col-md-12 text-left" id="phome-{{ product.id }}">            
            <div class="thumbnail flex-container" style="max-height: 300px;padding-top: 10px;"> 
                <div class="flex-item">                
                    <span class="media-middle" style="max-height: 100px;max-width: 100px;float: left;margin-right: 10px;">
                        {% if app.request.locale == app.request.defaultLocale %}
                            <a href="{{ path('product_default', { 'id': product.id, 'slug': product.slug }) }}">                            
                            {% else %}
                                <a href="{{ path('product_default_language', { 'id': product.id, 'slug': product.slug }) }}">                            
                                {% endif %}
                                {{ render_product_media90(product) }}
                            </a>
                    </span>
                    <h4>{{ product.name }}</h4>
                    <p class="content">{{ product.description | striptags | truncate(300) }}</p>
                    {% if authentiticated %}
                        <a style="position: absolute;right: 15px;top: 0px;" class="btn btn-default" role="button" href="{{ path('product_edit', {'id':product.id }) }}">
                            <span class="fa fa-edit"></span>
                        </a>
                    {% endif %} 
                </div>                                                       
                </a>
            </div>                        
        </div>
    {% endfor %}
</div>
<div class="col-xs-12">    
    <div id="medias-pagination" class="navigation">
        {{ knp_pagination_render(products) }}
    </div>
</div>