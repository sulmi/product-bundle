{% extends '@SulmiProductBundle/base.html.twig' %}
{% block title %}{{ product.name }}{{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block nav %}
{% endblock %}
{% block body %}
    <div class="row"> 
        <div class="col-lg-12">
            <h2 style="font-size: 2em;font-weight: 900;" class="header">{{ product.name }}</h2>
        </div>
    </div>
    <div class="row"> 
        <div class="col-lg-12">
            {{ product.description | raw }}
        </div>
    </div>
    <div class="row"> 
        <div class="col-lg-12">
            {% set allmedia = {'images': images, 'videos': videos, 'medias': medias } %}
            {% include 'SulmiProductBundle::partial/media_slot_for_pdf.html.twig' with allmedia %}
        </div>
    </div>
{% endblock %}
